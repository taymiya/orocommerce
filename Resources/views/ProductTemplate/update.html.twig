{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% set pageComponent = {
    'module': 'oroui/js/app/components/view-component',
    'options': {'view': 'oroemail/js/app/views/email-template-editor-view'},
    'layout': 'separate'
} %}
{% form_theme form with [
    'OroFormBundle:Form:fields.html.twig',
    'OroEmailBundle:Form:fields.html.twig',
]%}
{% import 'IbnabPmanagerBundle::macros.html.twig' as _pdftemplateMacros %}
{% if form.vars.value.id %}
    {% oro_title_set({params : {"%name%": form.vars.value.name} }) %}
    {% else %}
{% oro_title_set({params : {'%entityName%': 'oro.cms.page.entity_label'|trans} }) %}
{% endif %}

{% set formAction = form.vars.value.id
    ? path('pmanager_producttemplate_update', { id: form.vars.value.id })
    : path('pmanager_producttemplate_create')
%}

{% block navButtons %}
    {{ parent() }} 
    {% if resource_granted('pmanager_producttemplate_preview') %}
        {{ UI.button({
            'path' :  path('pmanager_producttemplate_preview', {'id': form.vars.value.id }),
            'title' : 'ibnab.pmanager.producttemplate.action.preview'|trans,
            'label' : 'ibnab.pmanager.producttemplate.action.preview'|trans,
            'aCss': 'btn-success dialog-form-renderer no-hash',
            'iCss': 'icon-share'
        }) }}

        {{ _pdftemplateMacros.renderPreviewDialog(form.vars.id, form.vars.value.name) }}
    {% endif %}


        {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
            {{ UI.deleteButton({
                'dataUrl': path('pdforo_api_delete_pdftemplate', {'id': form.vars.value.id}),
                'dataRedirect': path('pmanager_template_index'),
                'aCss': 'no-hash remove-button',
                'id': 'btn-remove-emailtemplate',
                'dataId': form.vars.value.id,
                'entity_label': 'ibnab.pmanager.pdftemplate.entity_label'|trans
            }) }}
        {% endif %}

        {{ UI.buttonSeparator() }}
        {{ UI.cancelButton(path('pmanager_producttemplate_index')) }}
        {% set html = UI.saveAndCloseButton() %}
        {% if form.vars.value.id or resource_granted('pmanager_producttemplate_update') %}
            {% set html = html ~ UI.saveAndStayButton() %}
        {% endif %}
        {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}



{% block content_data %}
    {% set id = 'producttemplate-edit' %}
    {% set dataBlocks = [
        {
            'title': 'General'|trans,
            'class': 'active',
            'subblocks': [{
                'title': '',
                'data': [
                    form_row(form.name),
                    form_row(form.description),
                    form_row(form.type),
                    form_row(form.round),
                    form_row(form.background),
                    form_row(form.border),
                    form_row(form.width),
                    form_row(form.height),
                    form_row(form.css),
                ]
            }]
        },
        {
            'title': 'Template data'|trans,
            'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form.content)
                ]
            },
            {
                'title': '',
                'data': [
                    _pdftemplateMacros.renderAvailableVariablesProductWidget('Oro\\Bundle\\ProductBundle\\Entity\\Product', 'entityName_1234')
                ]
            }
        ]
        },       

    ] %}
    
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
        }
    %}

    {{ parent() }}
{% endblock content_data %}
