<div class="widget-content">
        {% if not form.vars.valid and form.vars.errors|length %}
            <div class="alert alert-error">
                <div class="message">
                    {{ form_errors(form) }}
                </div>
            </div>
        {% endif %}
    <div class="form-container">
        <form method="post"
              data-nohash="true"
              id="{{ form.vars.name }}"
              action="{{ path('pmanager_default_indexfrontendorder', {'id': entityId}) }}"
              class="form-horizontal"
              >
           {{ form_start(form) }}
            <fieldset class="form-horizontal pdfmanager">
                    <div class="span3">
                        {{ form_row(form.entityClass , {value : entityClass}) }}
                    </div>
                    <div class="span3">
                        {{ form_row(form.entityId , {value : entityId}) }}
                    </div>
                    <div class="span3">
                        {{ form_row(form.template) }}
                    </div>
            
            </fieldset>

            <div class="widget-actions">
                <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                <button class="btn btn--info" type="submit">{{ 'Submit'|trans }}</button>
            </div>
        </form>
        {{ form_end(form) }}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null
        }
    %}
    </div>
 </div>
